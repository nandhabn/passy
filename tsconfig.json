{
  "compilerOptions": {
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "baseUrl": "./",
    "paths": {
      "@containers/*": ["src/containers/*"],
      "@componets/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
    },
    "traceResolution": true,
    "moduleResolution": "Node",
    "jsx": "react-native",
    "outDir": "./out",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6"],
    "noEmit": true,
    "strict": true,
  },
  "exclude": ["node_modules", "android", "ios"]
}
